void main(){
    Particle p = readCurrentParticle();
    //* Density
    p.rho = 0.f;

    //* Strain & Stress 
    mat2 velocityGradient = mat2(0.0);
    mat2 D = mat2(0);

    //* For all fluid particles
    for (int i = 0; i< inStorage.particles.length();i++)
    {
        Particle pi = inStorage.particles[i];
        vec2 p_pi = p.predPosition - pi.predPosition;
        float r = length(p_pi);
       
        if (r < settings.kernelRadius)
        {
            //* Density
            p.rho += W(r, settings.kernelRadius);

            //* Strain & Stress 
            vec2 gradient = gradW(p_pi, settings.kernelRadius);
            float V_i = settings.mass / pi.rho;
            velocityGradient += V_i * outerProduct(gradient, pi.velocity);
            D += 1.f / pi.rho * outerProduct(gradient, gradient);
        }
    }
    p.rho *= settings.mass;
  
    //* For all boundary particles
    for (int i = 0; i < boundary.particles.length();i++)
    {
        BoundaryParticle pb = boundary.particles[i];
        vec2 p_pb = p.predPosition - pb.position;
        float r = length(p_pb);
       
        if (r < settings.kernelRadius)
        {
            //* Density
            p.rho += p.psi_p0 * W(r, settings.kernelRadius);

             //* Strain & Stress 
            vec2 gradient = gradW(r, pb.normal, settings.kernelRadius);
            velocityGradient += pb.V * outerProduct(gradient, pb.velocity);
            D += 1.f / pb.rho * outerProduct(gradient, gradient);
        }
    }
    
    //* tait's equation
    // p.rho = max(p.rho, settings.rhoRest); 
    // float exponent = 7.f;
    // float B = settings.stiffness;// (settings.rhoRest * c * c) / exponent;
    // p.p = B * (pow(p.rho / settings.rhoRest, exponent) - 1.f); 
    // float stiffness = 10.f;
    // p.p = stiffness * (p.rho / settings.rhoRest - 1.f);
    //* Ideal gas equation
    p.p = settings.stiffness * (p.rho - settings.rhoRest); 
    
    //? required?
    // p.p = max(p.p, 0.f);

         
    //* https://dl.acm.org/doi/pdf/10.1145/2019406.2019410
    //? http://gamma.cs.unc.edu/granular/narain-2010-granular.pdf
    float theta = 0.261799; //* angle of repose (15Â°)
    float alpha  = sqrt((2.f / 3.f) * sin(theta)); //* frictional coefficient
    D *= (2.f * settings.mass * settings.mass * settings.dt) / (p.rho * p.rho);
    mat2 strainTensor = 0.5f * (velocityGradient + transpose(velocityGradient));
    mat2 stressTensor = inverse(D) * strainTensor;
    stressTensor -= 0.5f * (stressTensor[0][0] + stressTensor[1][1]);

    p.stress = min(frobenius(stressTensor), sqrt(3) * alpha * p.p);

    writeCurrentParticle(p);
}

